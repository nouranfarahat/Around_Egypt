<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="experience"
            type="com.example.a34ml.model.experiencemodel.Experience" />
        <variable
            name="action"
            type="com.example.a34ml.experience.view.OnExperienceClickListener" />
        <variable
            name="likePressed"
            type="com.example.a34ml.experience.view.OnLikeClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp">

        <ImageView
            android:id="@+id/experienceImage"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image_background"
            android:clipToOutline="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            myImageUrl="@{experience.cover_photo}"
            android:onClick="@{()->action.onCardClick(experience)}"/>

        <LinearLayout
            android:id="@+id/recommended_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:paddingStart="7dp"
            android:paddingTop="3dp"
            android:paddingEnd="7dp"
            android:paddingBottom="3dp"
            app:layout_constraintStart_toStartOf="@id/experienceImage"
            app:layout_constraintTop_toTopOf="@id/experienceImage">

            <ImageView
                android:id="@+id/recommendedIcon"
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:src="@drawable/star_rounded"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/gothambold"
                android:text="RECOMMENDED"
                android:textColor="#FFFFFF"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/shapeIcon"
            android:layout_width="27dp"
            android:layout_height="22dp"
            android:layout_margin="8dp"
            android:src="@drawable/shape"
            app:layout_constraintBottom_toBottomOf="@id/experienceImage"
            app:layout_constraintEnd_toEndOf="@id/experienceImage"/>

        <LinearLayout
            android:id="@+id/viewsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/experienceImage"
            app:layout_constraintStart_toStartOf="@id/experienceImage">

            <ImageView
                android:id="@+id/viewIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/eye"/>

            <TextView
                android:id="@+id/viewsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/gothambold"
                android:text="@{String.valueOf(experience.views_no)}"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/threesixtyIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/group_copy"
            app:layout_constraintTop_toTopOf="@id/experienceImage"
            app:layout_constraintBottom_toBottomOf="@id/experienceImage"
            app:layout_constraintStart_toStartOf="@id/experienceImage"
            app:layout_constraintEnd_toEndOf="@id/experienceImage"/>

        <ImageView
            android:id="@+id/infoIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:src="@drawable/information_outline"
            app:layout_constraintTop_toTopOf="@id/experienceImage"
            app:layout_constraintEnd_toEndOf="@id/experienceImage"/>

        <TextView
            android:id="@+id/experienceTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/gothambold"
            android:text="@{experience.title}"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/experienceImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/likesCount"/>

        <TextView
            android:id="@+id/likesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/gothambold"
            android:text="@{String.valueOf(experience.likes_no)}"
            app:layout_constraintTop_toTopOf="@id/experienceTitle"
            app:layout_constraintBottom_toBottomOf="@id/experienceTitle"
            app:layout_constraintEnd_toStartOf="@id/likeIcon"/>

        <ImageView
            android:id="@+id/likeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/heart_outline"
            android:onClick="@{()->likePressed.onLikeClick(experience.id)}"
            app:layout_constraintTop_toTopOf="@id/experienceTitle"
            app:layout_constraintBottom_toBottomOf="@id/experienceTitle"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>